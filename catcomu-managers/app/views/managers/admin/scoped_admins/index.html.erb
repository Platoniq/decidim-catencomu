<div class="content">
  <div class="row">
  	<%= t ".user_not_scoped" if current_user_process_groups.blank? %>

              <% console %>
	<% current_user_process_groups&.each do |group| %>
	  <div class="card with-overflow">
  	  <div class="card-divider">
  	    <h2 class="card-title">
    			<%= translated_attribute group.title %>
           <%= link_to t("actions.edit", scope: "decidim.admin"), decidim_admin_participatory_processes.edit_participatory_process_group_path(group), class: "button tiny button--title new" %>
    		</h2>
  	  </div>
        <div class="card-section">
          <table class="table-list">
            <thead>
              <tr>
                <th><%= t ".group_processes" %></th>
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody>
              <% processes_for_group(group).each do |process| %>
                <tr>
                  <td><%= translated_attribute process.title %></td>
                  <td>
                    <% if current_user.admin? || process.user_roles("admin")&.pluck(:decidim_user_id)&.include?(current_user.id) %>
                      <%= icon_link_to "pencil", decidim_admin_participatory_processes.edit_participatory_process_path(process), t("actions.configure", scope: "decidim.admin"), class: "action-icon--new" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= decidim_form_for(process_form(group), url: new_process_scoped_admins_path, method: :post) do |f| %>
              <%= render partial: "new_process_form", locals: { form: f, group: group } %>
              <%= f.submit t("actions.new_process", scope: "decidim.admin") %>
          <% end %>
  	  </div>
    </div>
	<% end %>
  </div>
</div>